<Window x:Name="mainWin" x:Class="assign5MathGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assign5MathGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="510" Width="857" MinHeight="510" MinWidth="857" ResizeMode="NoResize" MaxWidth="857" MaxHeight="510" WindowStartupLocation="CenterScreen" Background="Black">

    <Grid x:Name="mainGrid">
        <Image x:Name="imgMainStarWarsLogo" Source="/starWarsLogo.png" MinWidth="857" MinHeight="483" Height="483" MaxHeight="483" MaxWidth="857" />

        <Canvas>
            <Label x:Name="lblMainNameWarning" Content="" Canvas.Left="224" Canvas.Top="361" Foreground="Red" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"/>
            <Label x:Name="lblMainAgeWarning" Content="" Canvas.Left="599" Canvas.Top="361" Foreground="Red" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="txtbxUsrName" Canvas.Left="224" TextWrapping="Wrap" Canvas.Top="409" Width="188" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#FF505050" Foreground="#FFE2E426"/>
        </Canvas>
        <Label x:Name="lblUsrName" Content="Enter your name:" HorizontalAlignment="Left" Margin="219,380,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="#FFE2E426" FontSize="14">
            <Label.Background>
                <SolidColorBrush Color="Black" Opacity="0.5"/>
            </Label.Background>
        </Label>
        <Label x:Name="lblUsrAge" Content="Enter your age (3 - 10):" HorizontalAlignment="Left" Margin="471,380,0,0" VerticalAlignment="Top" Foreground="#FFE2E426" FontWeight="Bold" FontSize="14">
            <Label.Background>
                <SolidColorBrush Color="Black" Opacity="0.5"/>
            </Label.Background>
        </Label>
        <TextBox x:Name="txtbxUsrAge" HorizontalAlignment="Left" Margin="444,409,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188" Background="#FF505050" Foreground="#FFE2E426"/>
        <Button x:Name="btnStartGame" Margin="668,418,59,0" HorizontalContentAlignment="Left" BorderBrush="Black" Height="29" VerticalAlignment="Top" Click="btnStartGame_Click">
            <Button.Background>
                <SolidColorBrush Color="Black" Opacity="0.5"/>
            </Button.Background>
            <Image x:Name="imgYellowArrowButton" Source="/beginGameYellowArrow.png" Height="25" Width="117" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Button>
        <RadioButton x:Name="rdoAdd" Content="Addition" HorizontalAlignment="Left" Margin="219,442,0,0" VerticalAlignment="Top" Foreground="#FFE2E426"/>
        <RadioButton x:Name="rdoSub" Content="Subtraction" HorizontalAlignment="Left" Margin="331,442,0,0" VerticalAlignment="Top" Foreground="#FFE2E426"/>
        <RadioButton x:Name="rdoMultip" Content="Multiplication" HorizontalAlignment="Left" Margin="444,442,0,0" VerticalAlignment="Top" Foreground="#FFE2E426"/>
        <RadioButton x:Name="rdoDivis" Content="Division" HorizontalAlignment="Left" Margin="572,442,0,0" VerticalAlignment="Top" Foreground="#FFE2E426"/>
        <Label x:Name="lblWarnRdoWarning" Content="" HorizontalAlignment="Left" Margin="668,452,0,0" VerticalAlignment="Top" Foreground="Red" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontWeight="Bold"/>
    </Grid>
</Window>
